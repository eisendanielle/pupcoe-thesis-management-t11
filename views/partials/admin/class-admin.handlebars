<style type="text/css">
@import url("https://fonts.googleapis.com/css?family=Roboto:400,300");

body {
  color: #2c3e50;
  font-family: 'Roboto', sans-serif;
  font-weight: 400;
}
</style>


<h1>Classes</h1>
<div style="padding-left: 50px; padding-right:76px;">
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Batch</th>
          <th>Section</th>
          <th>Adviser</th>
          <th>View Details</th>
        </tr>
      </thead>
    </table>
  </div> 
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        {{#each classes}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.batch}}</td>
          <td>{{this.section}}</td>
          <td>{{this.adviser_first_name}} {{this.adviser_last_name}}</td>
          <td><a href="/admin/class/{{this.id}}">See Details</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <br>
      <a class="btn btn-dark col-md-12 back" href="/admin/class/add_class" style="color: black; border-radius: 30px !important; background: none !important; border: 1px solid black !important;">ADD CLASS</a>
</div>